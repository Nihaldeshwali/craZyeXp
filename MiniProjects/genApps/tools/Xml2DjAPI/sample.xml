<model_list> <!-- The main container-->
    <model name="Author"> <!-- indicate each models -->
        <field_list> <!-- indicate list of fields in a models -->
            <field name="name" type="CharField" properties="max_length=100,null=False" user_input="yes">None</field> <!-- This is a field with name "name" type 'Charfiled' and properties -->
            <field name="reg" type="IntegerField" properties="default=None,null=True,blank=True" user_input="yes">None</field>
            <field name="date" type="DateTimeField" properties="auto_now=True,default=datetime.now()">None</field>
            <field name="history" type="DictField" properties="default={'house_rent':0,'food':0,'traval':0},null=True,blank=True" user_input="default" default="None">None</field>
            <field name="tag1" type="ListField" properties="default=[1,2,3],null=True,blank=True" user_input="default" default="None">None</field>
            <field name="tag2" type="ListField" properties="default=[1,2,3],null=True,blank=True" user_input="default" default="None">None</field>
        </field_list>
        <addon_list>
           <addon name="quick_serach" onField="name" type="string"/>
           <addon name="quick_serach" onField="reg" type="integer"/>
           <addon name="log_history"/> <!-- Adding this will track history of each row -->
           <addon name="track_update"/>  <!-- Adding this will track crete and last update of each row -->
           <addon name="tag_ops" onField="tag1 tag2"/>  <!-- Adding this will enable append/remove/search on tags. -->
        </addon_list>        
    </model>
    <model name="Publication">
        <field_list>
            <field name="name" type="CharField" properties="max_length=100,null=False" user_input="yes">None</field>
            <field name="accid" type="IntegerField" properties="default=None,null=True,blank=True" user_input="yes">None</field>
        </field_list>
    </model>
    <model name="Book">
        <field_list>
            <field name="name" type="CharField" properties="max_length=100,null=False" user_input="yes">None</field>
            <field name="author" type="ManyToManyField" properties="to=Author" user_input="yes" ref="Author">None</field>
            <field name="publications" type="ForeignKey" properties="to=Publication" ref="Publication" >NONE</field>
        </field_list>
    </model>
</model_list>
